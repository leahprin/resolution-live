            <div class="footer__additional-links footer__copyright">© All rights reserved 2016</div> #}
        </div>

        <div class="footer__desktop">
            <div class="footer__left">
                <a href="/" class="footer__logo"><img src="{{networkData.templatePath}}/static/images/logo.svg"/></a>
                <div class="footer__navigation">
                    <div class="header__navigation-row">
                        <ul class="header__navigation-list">
                          {% include 'header-nav-items.twig' %}
                        </ul>
                    </div>
                </div>
                <div class="footer__additional-links">
									{% set footerNav = blogData.blogFooterMenu %}

									{% for navItem in footerNav %}
			            	<a class="footer__additional-links" href="{{navItem.url}}">{{menuItem.pageTitle}}{{menuItem.blogTitle}}</a>
									{% endfor %}

									{# {% set menuItems = blog.blogFooterMenu %}
