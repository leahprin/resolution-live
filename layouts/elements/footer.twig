{% set networkData = _Network.getNetworkData() %}
{% set blogData = _Blog.getBlog() %}
{% set footerNav = blogData.blogFooterMenu %}


<footer class="footer">
    <div class="footer__container">
        <div class="footer__info-mobile">
            <a href="#" class="footer__logo"><img src="{{networkData.templatePath}}/static/images/logo.svg"/></a>
						{% for navItem in footerNav %}
            	<a class="footer__additional-links" href="{{navItem.link}}">{{navItem.pageTitle}}</a>
						{% endfor %}
            <div class="footer__additional-links footer__copyright">© All rights reserved {{ "now"|date("Y") }}</div>
        </div>

        <div class="footer__desktop">
            <div class="footer__left">
                <a href="/" class="footer__logo"><img src="{{networkData.templatePath}}/static/images/logo.svg"/></a>
                <div class="footer__navigation">
                    <div class="header__navigation-row">
                        <ul class="header__navigation-list">
                          {% include 'header-nav-items.twig' %}
                        </ul>
                    </div>
                </div>
                <div class="footer__additional-links">
									{% for navItem in footerNav %}
			            	<a class="footer__additional-links" href="{{navItem.link}}">{{navItem.pageTitle}}{{navItem.blogTitle}}</a>
										<span class="footer__additional-links_separator">|</span>
									{% endfor %}
                    <div class="footer__additional-links footer__copyright">© All rights reserved {{ "now"|date("Y") }}</div>
                </div>
            </div>
            <div class="footer__right">
                <div class="footer__sponsor-title">PROUDLY SPONSORED BY</div>
                <div class="footer__sponsor-wrap">
                    <img src="{{networkData.templatePath}}/static/images/deloit-logo.svg" alt="">
                    <img src="{{networkData.templatePath}}/static/images/ibm-logo.svg" alt="">
                </div>
            </div>
        </div>
    </div>
</footer>
